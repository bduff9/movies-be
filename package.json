{
  "name": "movies-be",
  "version": "0.0.1",
  "description": "Movie and movie item tracker, back-end only.",
  "keywords": [
    "aswnn",
    "serverless",
    "typescript",
    "movies",
    "graphql"
  ],
  "homepage": "https://www.asitewithnoname.com/",
  "license": "MIT",
  "author": "Brian Duffey <brian.e.duffey@gmail.com>",
  "contributors": [],
  "main": "src/lambda.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/bduff9/movies-be"
  },
  "scripts": {
    "dev": "sls offline",
    "gql:download": "apollo client:download-schema src/schema.graphql --endpoint=http://localhost:4000/dev/graphql",
    "lint": "eslint src/ --ext .js,.ts",
    "lint:fix": "eslint src/ --ext .js,.ts --fix",
    "lint:script": "scriptlint && npmPkgJsonLint .",
    "lint:script:fix": "scriptlint --fix",
    "setup": "npx typesync && npm i && npm prune",
    "start": "ts-node src/lambda.ts",
    "test": "jest",
    "test:coverage": "jest --coverage --env=jsdom --coverage",
    "test:watch": "jest --watch",
    "typeCheck": "tsc"
  },
  "config": {},
  "dependencies": {
    "@middy/core": "1.4.0",
    "apollo-server-lambda": "2.19.0",
    "aws-lambda": "1.0.6",
    "class-validator": "0.12.2",
    "graphql": "15.4.0",
    "mysql2": "2.2.5",
    "reflect-metadata": "0.1.13",
    "type-graphql": "1.1.1",
    "typeorm": "0.2.29"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.66",
    "@types/eslint": "7.2.6",
    "@types/node": "14.14.13",
    "@typescript-eslint/eslint-plugin": "4.9.1",
    "@typescript-eslint/parser": "4.9.1",
    "eslint": "7.15.0",
    "eslint-plugin-graphql": "4.0.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettierx": "0.14.0",
    "eslint-plugin-you-dont-need-momentjs": "1.6.0",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "npm-package-json-lint": "5.1.0",
    "scriptlint": "2.1.2",
    "serverless-offline": "6.8.0",
    "serverless-plugin-typescript": "1.1.9",
    "serverless-stage-manager": "1.0.5",
    "ts-jest": "26.4.4",
    "typescript": "4.1.3"
  },
  "engines": {
    "node": "12.16.2"
  },
  "private": true,
  "husky": {
    "hooks": {
      "post-merge": "npm run setup",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "setupFiles": []
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ],
    "*.{md,json}": [
      "prettierx --write"
    ],
    "package.json": [
      "scriptlint --fix",
      "npmPkgJsonLint ."
    ]
  }
}
